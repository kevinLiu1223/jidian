        <div class="modal-footer">
          <button type="button" class="btn btn-primary">Save changes</button>
          <input type="submit" class="btn btn-secondary" data-dismiss="modal" value="添加">
        </div>
      </div>
    </div>
  </div>

  <ul class="list-group">
      <% list.forEach(function (article,index) { %>
    <li class="list-group-item"><%= article.title %> <a href="/del?index=<%=index%>">删除</a></li>
      <% }) %>
  </ul>
  </body>
</html>